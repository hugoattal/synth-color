{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "vitest/globals"
        ],
        "lib": [
            "ESNext"
        ],
        "sourceMap": false,
        "preserveWatchOutput": true,
        "preserveSymlinks": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.spec.ts"
    ]
}
